<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:cardCornerRadius="8dp"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/uNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="Fachry"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/uJabatanSKPD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/uNama"
                android:layout_below="@+id/uNama"
                android:layout_marginRight="8dp"
                android:text="Kepala Dinas BKD"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/uEmail"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/uNama"
                android:layout_below="@+id/uJabatanSKPD"
                android:layout_marginRight="8dp"
                android:text="dummy1@gmail.com"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/uNoHP"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/uNama"
                android:layout_below="@+id/uEmail"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:text="081232585148"
                android:textSize="13sp" />

            <ImageButton
                android:id="@+id/btnEmail"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/uNoHP"
                android:layout_toLeftOf="@id/btnWA"
                android:layout_marginRight="8dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/smallgmail" />

            <ImageButton
                android:id="@+id/btnWA"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/uNoHP"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/smallwhatsapp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>