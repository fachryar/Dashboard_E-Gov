<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/colorPrimaryLighter"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/noProgram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="19."
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/namaProgram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="8dp"
                android:layout_alignTop="@id/noProgram"
                android:layout_toRightOf="@id/noProgram"
                android:text="Program"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textIndikator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/namaProgram"
                android:layout_marginLeft="24dp"
                android:text="Indikator"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textTarget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/isiIndikator"
                android:layout_marginLeft="24dp"
                android:text="Target"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textDana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/isiTarget"
                android:layout_marginLeft="24dp"
                android:text="Dana"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/nei1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/namaProgram"
                android:layout_toRightOf="@id/textIndikator"
                android:layout_alignTop="@id/textIndikator"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text=":"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/nei2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/isiIndikator"
                android:layout_alignTop="@id/textTarget"
                android:layout_alignLeft="@id/nei1"
                android:layout_marginRight="8dp"
                android:text=":"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/nei3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/isiTarget"
                android:layout_alignTop="@id/textDana"
                android:layout_alignLeft="@id/nei2"
                android:layout_marginRight="8dp"
                android:text=":"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/isiIndikator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/namaProgram"
                android:layout_alignTop="@id/nei1"
                android:layout_toRightOf="@id/nei1"
                android:text="Isi Indikator"
                android:layout_marginRight="8dp"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/isiTarget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/isiIndikator"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/nei2"
                android:text="Isi Target"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/isiDana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/isiTarget"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/nei3"
                android:text="Dana"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>