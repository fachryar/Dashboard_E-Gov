<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".FormAddCategoryActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textJud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/imageViewKepegawaian"
                        android:layout_alignTop="@id/imageViewKepegawaian"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@id/imageViewKepegawaian"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:text="Tambah Kategori Baru"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RelativeLayout>


            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text72"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="monospace"
                        android:text="Pilih Jenis Data"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/checkBoxBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/text72"
                        android:layout_below="@id/text72"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="8dp"
                        android:text="Bar Chart"
                        android:textSize="10sp" />

                    <CheckBox
                        android:id="@+id/checkBoxTabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text72"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@id/checkBoxBar"
                        android:fontFamily="monospace"
                        android:text="Tabel"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/text73"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/checkBoxBar"
                        android:layout_alignLeft="@id/text72"
                        android:fontFamily="monospace"
                        android:text="Masukkan Query SQL"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/insertQuery"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_alignLeft="@id/text72"
                        android:layout_below="@id/text73"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="8dp"
                        android:ems="10"
                        android:fontFamily="monospace"
                        android:gravity="start"
                        android:hint="insert sql query here. . ."
                        android:inputType="textMultiLine"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>